<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_a_image"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        />
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:layout_marginLeft="5dp"
            android:id="@+id/ivOne"
            android:src="@drawable/sample_background"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:layout_marginLeft="105dp"
            android:id="@+id/ivTwo"
            android:src="@drawable/sample_avatar"
            />
        <ImageView
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:layout_marginLeft="205dp"
            android:src="@drawable/sample_background_3"
            android:id="@+id/ivThree"
            />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="70dp"
            android:id="@+id/ivFour"
            android:src="@drawable/sample_background_4"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="70dp"
            android:id="@+id/ivFive"
            android:src="@drawable/sample_background_5"
            />
        <ImageView
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:layout_marginLeft="205dp"
            android:layout_marginTop="70dp"
            android:src="@drawable/sample_background_6"
            android:id="@+id/ivSix"
            />

    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/choose_from_your_device"/>
    <Button
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="BROWSER"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/image_you_choose"/>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/ivChosenImage"
        android:src="@drawable/sample_background"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnDone"
            android:text="DONE"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:id="@+id/btnCancel"
            android:text="CANCEL"/>
    </LinearLayout>
</LinearLayout>