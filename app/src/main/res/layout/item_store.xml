<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_item_store"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:scaleType="fitXY"
        tools:src="@drawable/logo_circlek_50" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_weight="12"
        android:orientation="vertical">

        <com.iceteaviet.fastfoodfinder.ui.custom.roboto.RobotoTextView
            android:id="@+id/tv_item_storename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLength="36"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Circle K Nguyen Van Cu" />

        <com.iceteaviet.fastfoodfinder.ui.custom.roboto.RobotoTextView
            android:id="@+id/tv_item_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/material_gray_500"
            tools:text="225, Nguyen Van Cu, District 5, HCM City" />
    </LinearLayout>

    <com.iceteaviet.fastfoodfinder.ui.custom.roboto.RobotoTextView
        android:id="@+id/tv_item_distance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        tools:text="12.55 Km" />
</LinearLayout>