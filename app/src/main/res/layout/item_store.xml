<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_marginTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:scaleType="fitXY"
        tools:src="@drawable/logo_circlek_50"
        android:id="@+id/iv_item_store"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="12"
        android:layout_marginLeft="8dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:maxLength="36"
            android:textSize="16sp"
            android:textStyle="bold"
            android:ellipsize="end"
            tools:text="Circle K Nguyen Van Cu"
            android:id="@+id/tv_item_storename"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/colorGrey"
            android:id="@+id/tv_item_address"
            tools:text="225, Nguyen Van Cu, District 5, HCM City" />
    </LinearLayout>
    <TextView
        android:layout_width="0dp"
        android:layout_weight="3"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"
        android:id="@+id/tv_item_distance"
        tools:text="12.55 Km"/>
</LinearLayout>