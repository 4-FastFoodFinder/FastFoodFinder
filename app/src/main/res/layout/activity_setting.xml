<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.SettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/SettingsCategoryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/share_app" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp">

            <TextView
                android:id="@+id/tv_setting_share_app"
                style="@style/SettingsOptionsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_all_share"
                android:text="@string/share_app_with_friends" />
        </androidx.cardview.widget.CardView>

        <TextView
            style="@style/SettingsCategoryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/general" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp">

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/sw_metric"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|end|top"
                android:layout_marginTop="6dp"
                android:layout_marginRight="8dp"
                android:gravity="center_vertical" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/sw_languages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|end|bottom"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_setting_change_metric"
                    style="@style/SettingsOptionsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_setting_metric"
                    android:text="@string/use_metric_units" />

                <TextView
                    android:id="@+id/tv_setting_english"
                    style="@style/SettingsOptionsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_setting_translate"
                    android:text="@string/vietnamese" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <TextView
            style="@style/SettingsCategoryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_setting_edit_profile"
                    style="@style/SettingsOptionsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_setting_profile"
                    android:text="@string/edit_your_profile" />

                <TextView
                    android:id="@+id/tv_setting_change_password"
                    style="@style/SettingsOptionsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_setting_security"
                    android:text="@string/change_your_password" />

                <TextView
                    android:id="@+id/tv_setting_change_email"
                    style="@style/SettingsOptionsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_setting_security"
                    android:text="@string/change_your_email" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            style="@style/SettingsCategoryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notifications" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp">

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/sw_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|end|top"
                android:layout_marginTop="6dp"
                android:layout_marginRight="8dp"
                android:gravity="center_vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_setting_notification"
                    style="@style/SettingsOptionsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_setting_profile"
                    android:text="@string/set_notifications" />

                <TextView
                    android:id="@+id/tv_setting_notification_email"
                    style="@style/SettingsOptionsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_setting_security"
                    android:text="Email" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            style="@style/SettingsCategoryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/support" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_setting_update_db"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="8dp"
                    android:paddingTop="4dp"
                    android:paddingRight="8dp">

                    <ProgressBar
                        android:id="@+id/progress_bar_update_db"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/iv_update_db"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_setting_update"
                        android:visibility="visible" />

                    <TextView
                        style="@style/SettingsOptionsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="32dp"
                        android:background="@android:color/transparent"
                        android:clickable="false"
                        android:text="@string/update_db" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_setting_about_app"
                    style="@style/SettingsOptionsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_all_about"
                    android:text="@string/about_fastfood_finder" />

                <TextView
                    android:id="@+id/tv_setting_rate_app"
                    style="@style/SettingsOptionsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_all_about"
                    android:text="@string/rate_app" />

                <TextView
                    android:id="@+id/tv_setting_feedback"
                    style="@style/SettingsOptionsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_all_about"
                    android:text="@string/send_feedback" />

                <TextView
                    android:id="@+id/tv_setting_privacy_policy"
                    style="@style/SettingsOptionsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_all_about"
                    android:text="@string/privacy_policy" />

                <TextView
                    android:id="@+id/tv_setting_term_of_use"
                    style="@style/SettingsOptionsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_setting_termofuse"
                    android:text="@string/terms_of_use" />

                <TextView
                    android:id="@+id/tv_setting_sign_out"
                    style="@style/SettingsOptionsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_logout"
                    android:text="@string/sign_out" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
