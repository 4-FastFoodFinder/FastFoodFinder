<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/detail_shape_border"
            android:src="@drawable/ic_all_store" />

        <com.iceteaviet.fastfoodfinder.ui.custom.roboto.RobotoTextView
            android:id="@+id/store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:paddingLeft="10dp"
            android:text="Bs'mart Ngọc Trinh"
            android:textColor="@android:color/black"
            android:textSize="24sp" />
    </LinearLayout>

    <com.iceteaviet.fastfoodfinder.ui.custom.roboto.RobotoTextView
        android:id="@+id/store_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:paddingTop="6dp"
        android:text="227 Nguyễn Văn Cừ, Quận 5" />

    <com.iceteaviet.fastfoodfinder.ui.custom.roboto.RobotoTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:text="@string/convenience_store" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="#b6b6b6" />

    <include
        android:id="@+id/call_direction"
        layout="@layout/layout_call_direction" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="#b6b6b6" />

    <Button
        android:id="@+id/btn_fav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/googleBlue"
        android:text="@string/add_to_my_favorite"
        android:textColor="@color/colorWhite" />

    <com.iceteaviet.fastfoodfinder.ui.custom.roboto.RobotoTextView
        android:id="@+id/view_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="@string/view_more_detail"
        android:textAlignment="center"
        android:textColor="@color/googleBlue"
        android:textSize="16sp" />
</LinearLayout>